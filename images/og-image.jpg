<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630">
  <!-- Dark Cinematic Background -->
  <defs>
    <linearGradient id="cinemaGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#1A1A2E" stop-opacity="1"/>
      <stop offset="100%" stop-color="#16213E" stop-opacity="1"/>
    </linearGradient>
  </defs>
  <rect width="1200" height="630" fill="url(#cinemaGradient)"/>
  
  <!-- Stylized Movie Elements -->
  <g opacity="0.2">
    <path d="M0 100 L400 300 L0 500 Z" fill="white"/>
    <path d="M1200 50 L800 250 L1200 450 Z" fill="white"/>
  </g>
  
  <!-- Central Content -->
  <g transform="translate(600 315)" text-anchor="middle">
    <!-- Logo/Brand -->
    <text x="0" y="-100" font-family="Arial, sans-serif" font-size="90" font-weight="bold" fill="#E94560">
      PANGU PLAY
    </text>
    
    <!-- Tagline -->
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="50" fill="white">
      Watch Movies &amp; TV Shows
    </text>
    <text x="0" y="70" font-family="Arial, sans-serif" font-size="40" fill="#6FDFDF">
      Free • No Ads • Unlimited
    </text>
  </g>
  
  <!-- Movie Reel Silhouettes -->
  <circle cx="200" cy="100" r="80" fill="rgba(255,255,255,0.1)"/>
  <circle cx="1000" cy="530" r="120" fill="rgba(255,255,255,0.1)"/>
  
  <!-- Subtle Border -->
  <rect width="1200" height="630" fill="none" stroke="#E94560" stroke-width="10"/>
</svg>
